---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { execSync } from "child_process";

const version = execSync(
    'git describe --tags --always 2>/dev/null || echo "v0.1"',
)
    .toString()
    .trim();
const updated = new Date()
    .toLocaleDateString("en-US", {
        month: "numeric",
        day: "numeric",
        year: "numeric",
    })
    .replace(/\//g, "-");
---

<style></style>

<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <table>
                <thead>
                    <tr>
                        <th class="width-auto" colspan="2" rowspan="2"
                            ><h1 style="margin: 0">WILSON CHEN</h1>
                            <p style="margin: 0">
                                Human-Centered Researcher, Visual Culture
                            </p>
                        </th>
                        <th>Ver.</th>
                        <th>{version}</th>
                    </tr>
                    <tr>
                        <th>Upd.</th>
                        <th>{updated}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="width-min"><b>Occupation</b></td>
                        <td colspan="3"
                            >Research Assistant, Vision Science @ Meta
                            (Contract)</td
                        >
                    </tr>
                    <tr>
                        <td class="width-min"><b>Education</b></td>
                        <td colspan="3"
                            ><ul
                                style="list-style-type: none; padding: 0; margin: 0"
                            >
                                <li>
                                    MS Human-Centered Design and Engineering, UW
                                </li>
                                <li>BS Computer Science, Georgia Tech</li>
                            </ul></td
                        >
                    </tr>
                    <tr>
                        <td class="width-min"><b>Previous Affiliations</b></td>
                        <td colspan="3"
                            ><ul
                                style="list-style-type: none; padding: 0; margin: 0"
                            >
                                <li>Humana</li>
                                <li>Duo Security</li>
                                <li>Invisible Histories</li>
                                <li>UW Bookstore</li>
                                <li>Center for an Informed Public</li>
                            </ul></td
                        >
                    </tr>
                </tbody>
            </table>
        </main>
        <Footer />
    </body>
</html>
